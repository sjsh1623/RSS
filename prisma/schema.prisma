generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // üëà Ïù¥ Î∂ÄÎ∂Ñ Ï∂îÍ∞Ä
}

model article {
  id        Int      @id @default(autoincrement())
  title     String
  link      String?
  linkHash  String   @unique
  pubDate   DateTime
  source    String
  category  String
  language  String
  url       String
  context   String?
  createdAt DateTime @default(now())

  @@index([category])
  @@index([language])
}